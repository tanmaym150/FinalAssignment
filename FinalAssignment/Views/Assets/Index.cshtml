@model IEnumerable<Asset>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center;">Index</h1>
<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <form style="text-align:center" asp-controller="Assets" asp-action="Index" method="get" class="d-flex">
            <input class="form-control w-75" value="@ViewData["SeaechQuery"]" name="SearchQuery" type="search" placeholder="Search for Tool" aria-label="Search" />
            <button class="btn btn-outline-success mx-2" type="submit">Search</button>

        </form>
    </div>
</div>

<p style="padding:22px">
    <a class="btn btn-outline-primary mx-2" asp-action="Create" style="text-align:center;">Create New</a>
</p>
<table class="table  table-striped table-bordered w-50 " style="margin:auto">
    <thead style="background-color:cornflowerblue">
        <tr class="text-white">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstServiceLife)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BER_Maintainance_Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstServiceLife)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BER_Maintainance_Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Warranty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.FacilityType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssetId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AssetId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssetId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="Page navigation example" style="padding:20px">
                <ul class="pagination">
                    @{
                        double totalPages = ViewBag.TotalPages;

                        for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item">@Html.ActionLink(i.ToString(), "Index", new { SearchQuery = "", PageNumber = i }, new { @class = "page-link" })</li>
                        }
                    }
                </ul>
            </nav>
        </div>

    </div>
</div>
<h1 style="text-align:center">Product Type And Facility Type of Tools</h1>
@{
    var viewModel = ViewData["joinInfo"] as List<vmJoinAssetProduct>;
}
<table class="table table-striped table-bordered w-50" style="margin:auto">
    <thead style="background-color:cornflowerblue">
        <tr class="text-white">
            <th>
                Name
            </th>
            <th>
                Product Type
            </th>
            <th>
                Facility Type
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in viewModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityType)
                </td>
            </tr>
        }
    </tbody>

</table>


